# LAYOUTS
hyper - w : yabai -m space --layout bsp; sketchybar --trigger window_focus
hyper - s : yabai -m space --layout stack; sketchybar --trigger window_focus
hyper - f : yabai -m space --layout float; sketchybar --trigger window_focus

# MOVING FOCUS
ctrl - up : yabai -m window --focus north || yabai -m display --focus north; sketchybar --trigger window_focus
ctrl - down : yabai -m window --focus south || yabai -m display --focus south; sketchybar --trigger window_focus
ctrl - left : yabai -m window --focus west || yabai -m display --focus west; sketchybar --trigger window_focus
ctrl - right : yabai -m window --focus east || yabai -m display --focus east; sketchybar --trigger window_focus

hyper - right : yabai -m window --focus stack.next; sketchybar --trigger window_focus
hyper - left : yabai -m window --focus stack.prev; sketchybar --trigger window_focus

# MOVING WINDOWS
ctrl + alt - left : yabai -m window --swap west  || $(yabai -m window --display west; yabai -m display --focus west); sketchybar --trigger window_focus
ctrl + alt - down : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south); sketchybar --trigger window_focus
ctrl + alt - up : yabai -m window --swap north   || $(yabai -m window --display north; yabai -m display --focus north); sketchybar --trigger window_focus
ctrl + alt - right : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east); sketchybar --trigger window_focus

# Rotate windows clockwise and anticlockwise
alt - r         : yabai -m space --rotate 270; sketchybar --trigger window_focus
# shift + alt - r : yabai -m space --rotate 90; sketchybar --trigger window_focus


# SPACES
# create a space
hyper - n : yabai -m space --create; \
        sketchybar --trigger windows_on_space

# destroy current space
hyper - d : yabai -m space --destroy; sketchybar --trigger windows_on_space

# Focus
ctrl - 1 : yabai -m space --focus 1; sketchybar --trigger window_focus
ctrl - 2 : yabai -m space --focus 2; sketchybar --trigger window_focus
ctrl - 3 : yabai -m space --focus 3; sketchybar --trigger window_focus
ctrl - 4 : yabai -m space --focus 4; sketchybar --trigger window_focus
ctrl - 5 : yabai -m space --focus 5; sketchybar --trigger window_focus
ctrl - 6 : yabai -m space --focus 6; sketchybar --trigger window_focus
ctrl - 7 : yabai -m space --focus 7; sketchybar --trigger window_focus
ctrl - 8 : yabai -m space --focus 8; sketchybar --trigger window_focus
ctrl - 9 : yabai -m space --focus 9; sketchybar --trigger window_focus
ctrl - 0 : yabai -m space --focus 10; sketchybar --trigger window_focus

ralt - 1 : yabai -m space --focus 1; sketchybar --trigger window_focus
ralt - 2 : yabai -m space --focus 2; sketchybar --trigger window_focus
ralt - 3 : yabai -m space --focus 3; sketchybar --trigger window_focus
ralt - 4 : yabai -m space --focus 4; sketchybar --trigger window_focus
ralt - 5 : yabai -m space --focus 5; sketchybar --trigger window_focus
ralt - 6 : yabai -m space --focus 6; sketchybar --trigger window_focus
ralt - 7 : yabai -m space --focus 7; sketchybar --trigger window_focus
ralt - 8 : yabai -m space --focus 8; sketchybar --trigger window_focus
ralt - 9 : yabai -m space --focus 9; sketchybar --trigger window_focus
ralt - 0 : yabai -m space --focus 10; sketchybar --trigger window_focus

# Next space
ralt - d : yabai -m space --focus next; 
# sketchybar --trigger windows_on_spaces

# Previous space
ralt - a : yabai -m space --focus prev; 
# sketchybar --trigger windows_on_spaces

# Move space left
ralt + shift - a : yabai -m space --move prev; sketchybar --trigger windows_on_spaces

# Move space right
ralt + shift - d : yabai -m space --move next; sketchybar --trigger windows_on_spaces

# Send space to display 2 (by display arrangement index)
# yabai -m space --display 2

# Move window to a space
ralt + shift - 1 : yabai -m window --space 1; sketchybar --trigger window_focus
ralt + shift - 2 : yabai -m window --space 2; sketchybar --trigger window_focus
ralt + shift - 3 : yabai -m window --space 3; sketchybar --trigger window_focus
ralt + shift - 4 : yabai -m window --space 4; sketchybar --trigger window_focus
ralt + shift - 5 : yabai -m window --space 5; sketchybar --trigger window_focus
ralt + shift - 6 : yabai -m window --space 6; sketchybar --trigger window_focus
ralt + shift - 7 : yabai -m window --space 7; sketchybar --trigger window_focus
ralt + shift - 8 : yabai -m window --space 8; sketchybar --trigger window_focus
ralt + shift - 9 : yabai -m window --space 9; sketchybar --trigger window_focus
ralt + shift - 0 : yabai -m window --space 10; sketchybar --trigger window_focus

# Move window + focus to space
cmd + ctrl - 1 : yabai -m window --space 1; yabai -m space --focus 1; sketchybar --trigger window_focus
cmd + ctrl - 2 : yabai -m window --space 2; yabai -m space --focus 2; sketchybar --trigger window_focus
cmd + ctrl - 3 : yabai -m window --space 3; yabai -m space --focus 3; sketchybar --trigger window_focus
cmd + ctrl - 4 : yabai -m window --space 4; yabai -m space --focus 4; sketchybar --trigger window_focus
cmd + ctrl - 5 : yabai -m window --space 5; yabai -m space --focus 5; sketchybar --trigger window_focus
cmd + ctrl - 6 : yabai -m window --space 6; yabai -m space --focus 6; sketchybar --trigger window_focus
cmd + ctrl - 7 : yabai -m window --space 7; yabai -m space --focus 7; sketchybar --trigger window_focus
cmd + ctrl - 8 : yabai -m window --space 8; yabai -m space --focus 8; sketchybar --trigger window_focus
cmd + ctrl - 9 : yabai -m window --space 9; yabai -m space --focus 9; sketchybar --trigger window_focus
cmd + ctrl - 0 : yabai -m window --space 10; yabai -m space --focus 10; sketchybar --trigger window_focus

cmd + ralt - 1 : yabai -m window --space 1; yabai -m space --focus 1; sketchybar --trigger window_focus
cmd + ralt - 2 : yabai -m window --space 2; yabai -m space --focus 2; sketchybar --trigger window_focus
cmd + ralt - 3 : yabai -m window --space 3; yabai -m space --focus 3; sketchybar --trigger window_focus
cmd + ralt - 4 : yabai -m window --space 4; yabai -m space --focus 4; sketchybar --trigger window_focus
cmd + ralt - 5 : yabai -m window --space 5; yabai -m space --focus 5; sketchybar --trigger window_focus
cmd + ralt - 6 : yabai -m window --space 6; yabai -m space --focus 6; sketchybar --trigger window_focus
cmd + ralt - 7 : yabai -m window --space 7; yabai -m space --focus 7; sketchybar --trigger window_focus
cmd + ralt - 8 : yabai -m window --space 8; yabai -m space --focus 8; sketchybar --trigger window_focus
cmd + ralt - 9 : yabai -m window --space 9; yabai -m space --focus 9; sketchybar --trigger window_focus
cmd + ralt - 0 : yabai -m window --space 10; yabai -m space --focus 10; sketchybar --trigger window_focus

# Toggle fullscreen current focused window
ctrl + alt - return :  yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus


# TOGGLE BETWEEN HORIZONTAL/VERTICAL SPLIT
ctrl + alt - s : yabai -m window --toggle split; sketchybar --trigger window_focus


# FLOATING WINDOW BINDS
# make floating window fill screen
ctrl + shift - return     : yabai -m window --grid 1:1:0:0:1:1; sketchybar --trigger window_focus
# float/unfloat
ctrl + alt - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# float left/right half
ctrl + alt - left   : yabai -m window --grid  1:2:0:0:1:1; sketchybar --trigger window_focus
ctrl + alt - right   : yabai -m window --grid 1:1:0:0:2:1; sketchybar --trigger window_focus

# float / unfloat window and center on screen
ctrl + alt - c : yabai -m window --toggle float --grid 4:4:1:1:2:2; sketchybar --trigger window_focus

# SIZES
# Equalize size of windows
hyper - e : yabai -m space --balance; sketchybar --trigger window_focus

# Set resize border color 
:: resize @ : yabai -m config active_window_border_color 0xFFFF00FF
# toggle resize mode 
resize < hyper - r ; default
default < hyper - r ; resize
# resize commands
resize < left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
resize < down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
resize < up   : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
resize < right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# increase window size
shift + alt - a : yabai -m window --resize left:-40:0; sketchybar --trigger window_focus
shift + alt - s : yabai -m window --resize bottom:0:40; sketchybar --trigger window_focus
shift + alt - w : yabai -m window --resize top:0:-40; sketchybar --trigger window_focus
shift + alt - d : yabai -m window --resize right:40:0; sketchybar --trigger window_focus

# decrease window size
shift + ctrl - a : yabai -m window --resize left:40:0; sketchybar --trigger window_focus
shift + ctrl - s : yabai -m window --resize bottom:0:-40; sketchybar --trigger window_focus
shift + ctrl - w : yabai -m window --resize top:0:40; sketchybar --trigger window_focus
shift + ctrl - d : yabai -m window --resize right:-40:0; sketchybar --trigger window_focus


# toggle sticky + float, picture in picture
alt - p : yabai -m window --toggle sticky --toggle pip; sketchybar --trigger window_focus